<article>
    <a href="/dashboard"> &larr; Back To Dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="updateForm">
        <div>
            <label for="post-title">post title:</label>
            <input id="updateTitle" type="text" size="60" value="{{post.title}}" />
        </div>
        <div>
            <label for="post-content">post content:</label>
            <textarea id="updateText" type="text">{{post.text}}</textarea>
        </div>
        <div class="is-pulled-right">
        created by you on {{format_date post.created_at}}
         <a href="/post/{{post.id}}">{{post.comments.length}} {{format_comment "comment" post.comments.length}}</a>
        </div>
        <div>
            <button type="submit">Save Post</button>
            <button type="button" class="deletePost">Delete Post</button>
        </div>
    </form>
</article>

<form class="commentForm">
    <div>
        <textarea id="commentText"></textarea>
    </div>
    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/js/comment.js"></script>
<script src="/js/updatepost.js"></script>
<script src="/js/deletepost.js"></script>
