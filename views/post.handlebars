{{#if loggedIn}}
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form newPostForm">
      <div class="form-group">
        <label for="post-name">Title: </label>
        <input class="form-input" type="text" id="postTitle" name="title" />
      </div>
      <div class="form-group">
        <label for="blogContent">description:</label>
        <textarea class="form-input" id="blogContent" name="text"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

    {{#if posts.length}}
    <div class="col-md-6 project-list">
        <h3>Current Blog:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{id}}">{{title}}</a></h4>
            </div>
            <div class="col-md-8">
                <strong>Posted by {{user.username}} on {{format_date created_at}}</strong>
            </div>
            <div class="col-md-4">
                <button><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></button>
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>
{{/if}}
